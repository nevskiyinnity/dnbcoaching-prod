datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String  @id
  clerkId    String? @unique
  name       String
  email      String?
  role       String  @default("user")
  createdAt  String
  data       String?

  @@map("users")
}

model Setting {
  key   String @id
  value String

  @@map("settings")
}
